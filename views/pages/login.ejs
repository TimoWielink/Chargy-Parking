<body>

<div class="limiter">
    <div class="container-login100" style="background-image: url('../../public/images/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form class="login100-form validate-form" name="loginForm" id="loginForm" method="post">
					<span class="login100-form-title p-b-49">
						<img src="../../public/Images/logo2.png" alt="logo" id="logo-register">
					</span>

                <div class="wrap-input100 validate-input m-b-23" data-validate="Gebruikersnaam is verplicht">
                    <span class="label-input100">Gebruikersnaam</span>
                    <input class="input100" type="text" name="username" id="username" placeholder="Type uw gebruikersnaam">
                    <!--<span class="focus-input100" data-symbol="&#xf206;"></span>-->
                </div>

                <div class="wrap-input100 validate-input" data-validate="Wachtwoord is verplicht">
                    <span class="label-input100">Wachtwoord</span>
                    <input class="input100" type="password" name="password" id="password" placeholder="Type uw wachtwoord">
                    <!--<span class="focus-input100" data-symbol="&#xf190;"></span>-->
                </div>

                <!--<div class="text-right p-t-8 p-b-31">-->
                <!--<a href="#">-->
                <!--Forgot password?-->
                <!--</a>-->
                <!--</div>-->

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn" type="submit" name="login" id="login" onclick="f()">
                            Login
                        </button>
                    </div>
                </div>

                <a href="/register" class="txt2">
                    Registreer
                </a>
            </form>
    </div>
</div>
</div>

<script>

    function f() {
        let username = document.getElementById("username").value
        console.log(username)
        localStorage.setItem("user", username)
    }



</script>

</body>
